@page "/DailyJobConfig"
@using Microsoft.AspNetCore.Authorization
@using Ray.BiliBiliTool.Config.Options;
@attribute [Authorize]
@rendermode InteractiveServer
@inherits BaseConfigComponent<DailyTaskOptions>

<PageTitle>每日任务配置</PageTitle>

<MudContainer>
    <MudText Typo="Typo.h4" Class="mb-4">每日任务配置</MudText>

    @if (_isLoading)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else
    {
        <EditForm Model="@_config" OnValidSubmit="HandleValidSubmitAsync">
            <DataAnnotationsValidator />

            <!-- 基础配置卡片 -->
            <MudCard Class="mb-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">基础配置</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12" md="6">
                            <MudSwitch T="bool" @bind-Value="_config.IsEnable"
                                Label="是否启用每日任务" Color="Color.Primary" />
                        </MudItem>
                        <MudItem xs="12" md="6">
                            <MudTextField T="string" @bind-Value="_config.Cron" Label="定时任务Cron表达式"
                                HelperText="例如：0 0 6 * * ? (每天早上6点执行)"
                                Disabled="!_config.IsEnable" />
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>

            <!-- 详细配置卡片 -->
            @if (_config.IsEnable)
            {
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">详细配置</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudGrid>
                            <MudItem xs="12" md="6">
                                <MudSwitch T="bool" @bind-Value="_config.IsWatchVideo"
                                    Label="是否观看视频" Color="Color.Primary" />

                                <MudSwitch T="bool" @bind-Value="_config.IsShareVideo"
                                    Label="是否分享视频" Color="Color.Primary" Class="mt-3" />

                                <MudSwitch T="bool" @bind-Value="_config.IsDonateCoinForArticle"
                                    Label="是否开启专栏投币模式" Color="Color.Primary" Class="mt-3" />

                                <MudNumericField T="int" @bind-Value="_config.NumberOfCoins" Label="每日设定的投币数 [0-5]"
                                    Min="0" Max="5" Class="mt-3" />

                                <MudNumericField T="int" @bind-Value="_config.NumberOfProtectedCoins" Label="要保留的硬币数量"
                                    Min="0" Class="mt-3" />

                                <MudSwitch T="bool" @bind-Value="_config.SaveCoinsWhenLv6"
                                    Label="达到六级后是否开始白嫖" Color="Color.Primary" Class="mt-3" />

                                <MudSwitch T="bool" @bind-Value="_config.SelectLike"
                                    Label="投币时是否点赞" Color="Color.Primary" Class="mt-3" />
                            </MudItem>

                            <MudItem xs="12" md="6">
                                <MudTextField T="string" @bind-Value="_config.SupportUpIds" Label="支持的up主Id集合（用逗号分隔）"
                                    HelperText="配置后会优先从指定的up主下挑选视频进行观看、分享和投币" />

                                <MudNumericField T="int" @bind-Value="_config.DayOfAutoCharge" Label="每月几号自动充电 [-1,31]"
                                    Min="-1" Max="31" Class="mt-3"
                                    HelperText="-1表示不指定，默认月底最后一天；0表示不充电" />

                                <MudTextField T="string" @bind-Value="_config.AutoChargeUpId" Label="充电Up主Id" Class="mt-3" />

                                <MudNumericField T="int" @bind-Value="_config.DayOfReceiveVipPrivilege" Label="每月几号自动领取会员权益 [-1,31]"
                                    Min="-1" Max="31" Class="mt-3"
                                    HelperText="-1表示不指定，默认每月1号；0表示不自动领取" />

                                <MudNumericField T="int" @bind-Value="_config.DayOfExchangeSilver2Coin" Label="每月几号执行银瓜子兑换硬币 [-1,31]"
                                    Min="-2" Max="31" Class="mt-3"
                                    HelperText="-1表示不指定，默认每月1号；-2表示每天；0表示不进行兑换" />

                                <MudSelect T="string" @bind-Value="_config.DevicePlatform" Label="执行客户端操作时的平台" Class="mt-3">
                                    <MudSelectItem Value="@("android")">Android</MudSelectItem>
                                    <MudSelectItem Value="@("ios")">iOS</MudSelectItem>
                                </MudSelect>
                            </MudItem>
                        </MudGrid>
                    </MudCardContent>
                </MudCard>
            }

            <!-- 操作按钮 -->
            <MudCard Class="mt-4">
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">保存配置</MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="LoadConfigAsync" Class="ml-2">重新加载</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>

        @if (!string.IsNullOrEmpty(_saveMessage))
        {
            <MudAlert Severity="@(_saveSuccess ? Severity.Success : Severity.Error)" Class="mt-3">
                @_saveMessage
            </MudAlert>
        }
    }
</MudContainer>

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
