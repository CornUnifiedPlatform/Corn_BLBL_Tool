@page "/VipPrivilegeConfig"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>会员特权配置</PageTitle>

<MudContainer>
    <MudText Typo="Typo.h4" Class="mb-4">会员特权配置</MudText>

    @if (_isLoading)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else
    {
        <EditForm Model="@_config" OnValidSubmit="HandleValidSubmitAsync">
            <DataAnnotationsValidator />
            <MudCard>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12" md="6">
                            <MudSwitch T="bool" @bind-Value="_config.IsEnable"
                                Label="是否启用会员特权任务" Color="Color.Primary" />
                        </MudItem>
                        <MudItem xs="12" md="6">
                            <MudTextField T="string" @bind-Value="_config.Cron" Label="定时任务Cron表达式"
                                HelperText="例如：0 0 1 * * ? (每天凌晨1点执行)" />
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">保存配置</MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="LoadConfigAsync" Class="ml-2">重新加载</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>

        @if (!string.IsNullOrEmpty(_saveMessage))
        {
            <MudAlert Severity="@(_saveSuccess ? Severity.Success : Severity.Error)" Class="mt-3">
                @_saveMessage
            </MudAlert>
        }
    }
</MudContainer>

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
